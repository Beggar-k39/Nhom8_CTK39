@model List<Online_Education.Areas.Admin.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h1 id="title" style="display:none">@ViewBag.Title</h1>

@section Slider{
    <!-- Start Slider -->
    <section id="mu-slider">
        <!-- Start single slider item -->
        @foreach (var item in Model)
        {
            <div class="mu-slider-single">
                <div class="mu-slider-img" style="height:600px">
                    <figure>
                        <img src="~/Content/my_images/truong1.jpg" alt="img">
                    </figure>
                </div>
                <div class="mu-slider-content">
                    <h4>@item.TieuDe</h4>
                    <span></span>
                    <h2>Chúng tôi sẽ giúp bạn học</h2>
                    <p>@item.NoiDung</p>
                    <a href="#" class="mu-read-more-btn">Đọc thêm</a>
                </div>
            </div>
        }


    </section>
    <!-- End Slider -->}
@section Service{
    <!-- Start service  -->
    <section id="mu-service">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="mu-service-area">
                        <!-- Start single service -->
                        <div class="mu-service-single">
                            <span class="fa fa-book"></span>
                            <h3>Đăng ký trực tuyến</h3>
                            <p>Cho phép học viên đăng kí khóa học trực tuyến</p>
                        </div>
                        <!-- Start single service -->
                        <!-- Start single service -->
                        <div class="mu-service-single">
                            <span class="fa fa-users"></span>
                            <h3>Giảng viên chuyên nghiệp</h3>
                            <p>Được đào tạo bài bản và giàu kinh nghiệm</p>

                        </div>
                        <!-- Start single service -->
                        <!-- Start single service -->
                        <div class="mu-service-single">
                            <span class="fa fa-table"></span>
                            <h3>Chương trình học mới</h3>
                            <p>Chương trình học luôn được cập nhật</p>
                        </div>
                        <!-- Start single service -->
                    </div>
                </div>
            </div>
     
        </div>
    </section>
    <!-- End service  -->
}
@section About{
    <!-- Start about us -->
    <section id="mu-about-us">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-about-us-area">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="mu-about-us-left">
                                    <!-- Start Title -->
                                    <div class="mu-title">
                                        <h2>Giới thiệu</h2>
                                    </div>
                                    <!-- End Title -->
                                    <p>Đến đây với chúng tôi các bạn sẽ học được mọi thứ từ cách hack Facebook crush cho đến report không thương tiếc những trang bạn ghét :)))</p>
                                    <ul>
                                        <li>Đào tạo: Tổ chức các khóa học ngắn hạn, đào tạo chuyển giao công nghệ thuộc lĩnh vực Công nghệ Thông tin </li>
                                        <li>Dịch vụ: Thực hiện các dịch vụ nghiên cứu, ứng dụng, tư vấn, đánh giá, thẩm định về khoa học công nghệ trong các lĩnh vực Công nghệ Thông tin.</li>
                                        <li>Bảo hộ quyền Sở hữu trí tuệ: Thực hiện bảo hộ quyền sở hữu trí tuệ đối với những sản phẩm khoa học của Trung tâm nghiên cứu và đầu tư.</li>
                                        <li>Chuyển giao công nghệ: Chuyển giao công nghệ từ các sản phẩm nghiên cứu thuộc lĩnh vực Công nghệ Thông tin Địa lý </li>
                                        <li>
                                            Hợp tác với các tổ chức và các nhà khoa học trong và ngoài nước trong các lĩnh vực Khoa học thông tin địa lý, Viễn thám, Môi trường,…
                                        </li>
                                    </ul>
                                    <p>Mọi thông tin chi tiết xin liện hệ đến vời YASSUO SĐT 033696969</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="mu-about-us-right">
                                    <a id="mu-abtus-video" href="https://www.youtube.com/watch?v=m_yHWtfLhgc" target="mutube-video">
                                        <img src="~/Content/my_images/truong2.jpg" alt="img">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End about us -->
}
