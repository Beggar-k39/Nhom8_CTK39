                        </div>
                        <div class="progress-one two-progress my-3">
                            <h4 class="progress-tittle">Kinh nghiệm</h4>
                            <div class="progress-effect progress-effect-3 w-100">
                            </div>
                        </div>
                        <div class="progress-one two-progress my-3">
                            <h4 class="progress-tittle">Quản trị dự án</h4>
                            <div class="progress-effect w-50" style="background-color:green">
                            </div>
                        </div>
                        <div class="progress-one two-progress my-3">
                            <h4 class="progress-tittle">Ví dụ thực tế</h4>
                            <div class="progress-effect w-100" style="background-color:blueviolet">
                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-xl-6 mt-xl-0 mt-5 text-xl-right text-center">
                    <img class="img-fluid rounded" src="~/Content/Front_End/images/who.jpg" alt="">
                </div>
            </div>
        </div>
    </section>
}
