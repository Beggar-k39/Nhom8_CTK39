
@{
    ViewBag.Title = "Professiors";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h1 id="title" style="display:none">@ViewBag.Title</h1>
@section who{
    <section class="w3ls-bnrbtm py-5" id="who">
        <div class="py-xl-5 py-lg-3">
            <div class="row no-gutters">
                <div class="col-xl-6 who-left-w3pvt">
                    <h6 class="text-colors let-spa">Something</h6>
                    <h3 class="text-bl font-weight-bold mt-2 mb-3">Đội ngũ giảng viên</h3>
                    <p>
                        Là những giảng viên có nhiều kinh nghiệm trong các lĩnh vực lập trình
                    </p>
                    <ul class="list-unstyled who-lists mt-4 ml-5">
