
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassWord</title>
    <link href="~/Content/Front_End/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Front_End/css/login.css" rel="stylesheet" />
    <link href="~/Content/Front_End/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        .board{
            top:50%;
            left:50%;
            transform:translate(-50%,-50%);
            animation:none;
            transition:1s;

        }
    </style>
</head>
<body>
    <div class="container-fluid bao">
        @* Sign In Part *@
        <div class="board">
            <h1 class="display-5">Lấy lại mật khẩu</h1>
            @using (Html.BeginForm("ForgotPassWord", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger", @role = "alert" })
                <label>Tên đăng nhập</label><br />
                <input class="form-control" name="userName" type="text" placeholder="Nhập tên đăng nhập" onblur="this.placeholder='Nhập tên đăng nhập'" onfocus="this.placeholder=''" />
                <label>Email</label>
                <input class="form-control" name="email" placeholder="Nhập email" onblur="this.placeholder='Nhập email'" type="text" onfocus="this.placeholder=''" /><br />
                <input class="btn btn btn-block btn-success" type="submit" name="btnSubmit" value="Lấy lại mật khẩu" />
                <br />
            }
        </div>
    </div>
</body>
</html>
